@using Aplicacion.UseCases.Propietario
@model List<ListarTurnerosDTO>
@{
    ViewData["Area"] = "Propietarios";
}

<main>
    <div class="row">
        <h1>
            Mis Turneros
        </h1>
        <div class="col-12" style="margin-top: 10px">
            @if (@Model.Count == 0)
            {
                <div class="jumbotron">
                    <h1>Aún no creo ningún turnero</h1>
                </div>
            }
            else
            {
                <table class="table table-responsive table-striped " style="width:100%">
                    <thead>
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Direccion</th>
                            <th scope="col" class="text-center">Gente en espera</th>
                            <th scope="col" colspan="2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var turnero in Model)
                        {
                            <tr>
                                <td> @turnero.Concepto </td>
                                <td> @turnero.Calle @turnero.Numero, @turnero.Ciudad</td>
                                <td class="text-center"> @turnero.CantidadEnEspera</td>
                                <td>
                                    @Html.ActionLink(
                                        "Detalle",
                                        "Detalle",
                                        "Turnero",
                                        new
                                             {
                                            idTurnero = turnero.Id
                                        },
                                        null
                                    )
                                    @Html.ActionLink(
                                        "Editar",
                                        "Editar",
                                        "Turnero",
                                        new
                                        {
                                            idTurnero = turnero.Id
                                        },
                                        null
                                    )
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <footer>
        <div class="text-center justify-content-center">
            <a role="button" class="btn btn-primary" asp-area="Propietarios" asp-controller="Turnero" asp-action="Crear">Nuevo Turnero</a>
        </div>
    </footer>
</main>
